{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Angular: Build-Watch SSR",
            "type": "shell",
            "command": "ng build ssr --watch --configuration development",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/client/angular",
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        }
    ]
}